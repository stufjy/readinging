/* pages/index/index.wxss */
/* 一本书的区域 */
.book{
  display: flex;
  padding: 10px;  
  border-bottom:1px solid #ccc; /*下划线*/
}
/* 小说图片 */
.book_img{
  width:150rpx;
  height:200rpx;
  margin-right:20rpx; /*与右侧文字的距离*/
}
/* 小说介绍 */
.book_info{
  flex:1; /*将右侧分配给 info 介绍文字*/
  font-size:28rpx;
  line-height:1.6;
  color:#666;
}
/* 小说名字 */
.book_name{
  color:#000;
  font-size:40rpx;   /*字体大小*/
  font-weight:bolder; /*加粗*/
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}
