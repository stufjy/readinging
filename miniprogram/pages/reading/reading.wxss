sup{
  font-size: 30rpx;
  vertical-align:text-bottom;
}
/* 绿色背景 */
.read{
  width: 100%;
  height: 1200rpx;
  background-color: rgba(0,255,0,0.2);
}
/* 章节 */
.read-title{
  text-align: center;
  line-height: 50rpx;
  font-size: 40rpx;
  /* font-family: "华文新魏"; */
}
/* 主体内容 */
.reading{
  font-family: "华文新魏";
  text-indent: 1.5em;       /* 首行缩进 */
  margin-top: 10rpx;
  padding: 20rpx;
}
/* 按钮 */
.myBtn{
  display: flex;
  position: fixed;
  bottom: 0; 
}
.myBtn button{
  width: 376rpx;
}